<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.zefira.accesototal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="pe.zefira.accesototal.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pe.zefira.accesototal.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="pe.zefira.accesototal.PlacesActivity"
            android:label="@string/title_activity_places" >
        </activity>
        <activity
            android:name="pe.zefira.accesototal.PeopleActivity"
            android:label="@string/title_activity_people" >
        </activity>
        <activity
            android:name="pe.zefira.accesototal.EventsActivity"
            android:label="@string/title_activity_events" >
        </activity>
    </application>

</manifest>
